// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // TODO: salvar como uuid()
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Orphanage {
  id               Int      @id @default(autoincrement())
  name             String   @unique
  latitude         Decimal  @unique @db.Decimal(8, 6)
  longitude        Decimal  @unique @db.Decimal(9, 6)
  about            String
  approved         Boolean  @default(false)
  opening_hours    String // TODO: Só as horas e os minutos
  closing_hours    String // TODO: Só as horas e os minutos
  open_on_weekends Boolean
  whatsapp         String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  Image            Image[]
}

model Image {
  id          Int       @id @default(autoincrement())
  path        String
  orphanageId Int
  orphanage   Orphanage @relation(fields: [orphanageId], references: [id])
}
